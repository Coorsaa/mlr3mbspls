CXX_STD = CXX17

## Portable Makevars: avoid GNU make extensions (e.g. "+=") and keep OpenMP
## macros out of PKG_CPPFLAGS (used for both C and C++).
PKG_CPPFLAGS = -DARMA_USE_CURRENT

## Use the C++ OpenMP flags consistently for compilation and linking.
PKG_CXXFLAGS = $(SHLIB_OPENMP_CXXFLAGS)
PKG_LIBS = $(SHLIB_OPENMP_CXXFLAGS) $(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS)
